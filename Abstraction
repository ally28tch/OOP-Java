abstract class Car {
    String brand = "Toyota";

    abstract void startEngine();
    abstract void stopEngine();
    abstract void fueltype();
    abstract void transmission();
    
    void showBrand() {
        System.out.println("Car Brand: " + brand);
    }
}

class ToyotaVios extends Car {

    @Override
    void startEngine() {
        System.out.println("Toyota Vios engine started using push button.");
    }

    @Override
    void stopEngine() {
        System.out.println("Toyota Vios engine stopped using break.");
    }

    void showModel() {
        System.out.println("Model: Toyota Vios 2024");
    }
    
    void fueltype(){
        System.out.println("Fuel Type: Gasoline");
    }
    
    void transmission(){
        System.out.println("Transmission: Automatic");
 }
}
public class Main {
    public static void main(String[] args) {
        Car myCar = new ToyotaVios(); 
        myCar.showBrand();
        myCar.startEngine();
        myCar.stopEngine();
        myCar.fueltype();
        myCar.transmission();
        ((ToyotaVios) myCar).showModel();
    }
}
